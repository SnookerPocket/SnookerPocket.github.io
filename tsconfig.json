{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@Components/*": [
        "./src/components"
      ],
      "@Layout/*": [
        "./src/layout"
      ],
      "@styles/*": [
        "./src/app/css"
      ]
    },
    "strictNullChecks": true
  },
  "include": [
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
